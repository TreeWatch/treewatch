<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns ="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="TreeWatch.BlockInformationContentPage"
	Title  ="Block"
	StyleId="BlockInformation"
	Padding="0, 0, 0, 0">
	<ContentPage.Content>
		<TableView
			Intent="Menu">
			<TableRoot>
				<TableSection>
					<ViewCell>
						<StackLayout
							Orientation="Horizontal"
							Padding    ="10">
							<Label
								Text           ="ID"
								TextColor      ="#000000"
								VerticalOptions="Center" />
							<Label
								HorizontalOptions="EndAndExpand"
								Text             ="{Binding Block.ID}"
								TextColor        ="#8E8F93"
								VerticalOptions  ="Center" />
						</StackLayout>
					</ViewCell>
					<ViewCell>
						<StackLayout
							Orientation="Horizontal"
							Padding    ="10">
							<Label
								Text           ="Name"
								TextColor      ="#000000"
								VerticalOptions="Center" />
							<Label
								HorizontalOptions="EndAndExpand"
								Text             ="{Binding Block.TreeType.Name}"
								TextColor        ="#8E8F93"
								VerticalOptions  ="Center" />
						</StackLayout>
					</ViewCell>
				</TableSection>
			</TableRoot>
		</TableView>
	</ContentPage.Content>
</ContentPage>