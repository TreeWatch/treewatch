<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns     ="http://xamarin.com/schemas/2014/forms"
	xmlns:x    ="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class    ="TreeWatch.DetailedInformationContentPage"
	xmlns:local="clr-namespace:TreeWatch;assembly=TreeWatch"
	Title      ="Detailed Information"
	StyleId    ="DetailedInformation"
	Padding    ="0, 0, 0, 0">
	<ContentPage.Content>
		<TableView>
			<TableRoot>
				<TableSection>
					<ImageCell />
				</TableSection>
				<TableSection
					Title="Fieldinformationen">
					<TextCell
						Text  ="Name"
						Detail="{Binding FieldName}" />
					<TextCell
						Text  ="Latitude"
						Detail="{Binding FieldLatitude}" />
					<TextCell
						Text  ="Longitude"
						Detail="{Binding FieldLongitude}" />
					<TextCell
						Text  ="Sea level"
						Detail="{Binding FieldSeaLevel}" />
					<TextCell
						Text  ="Size"
						Detail="{Binding FieldSize}" />
				</TableSection>
				<TableSection
					Title="Blockinformation">
					<TextCell
						Text  ="Blocks"
						Detail="{Binding FieldBlockCount}"/>
				</TableSection>
			</TableRoot>
		</TableView>
	</ContentPage.Content>
</ContentPage>