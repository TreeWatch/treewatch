<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns ="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TreeWatch.BlocksInformationContentPage"
    Title  ="Blocks"
    StyleId="BlockInformation"
    Padding="0, 0, 0, 0">
    <ContentPage.Content>
        <ListView
            x:Name      ="blockView"
            ItemsSource ="{Binding Field.Blocks}"
            SelectedItem="{Binding Block}">
            <ListView.Header>
                <StackLayout>
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            Orientation="Horizontal"
                            Padding    ="20,10,20,10">
                            <AbsoluteLayout>
                                <Label
                                    Text           ="{Binding TreeType.Name}"
                                    TextColor      ="Black"
                                    VerticalOptions="Center" />
                                <Label
                                    Opacity        ="0.75"
                                    Text           ="{Binding TreeType.Name}"
                                    TextColor      ="{Binding TreeType.ColorProp}"
                                    VerticalOptions="Center" />
                            </AbsoluteLayout>
                            <Label
                                Text           ="("
                                TextColor      ="#8E8F93"
                                VerticalOptions="Center" />
                            <Label
                                Text           ="{Binding ID}"
                                TextColor      ="#8E8F93"
                                VerticalOptions="Center" />
                            <Label
                                Text           =")"
                                TextColor      ="#8E8F93"
                                VerticalOptions="Center" />
                            <Image
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions  ="Center">
                                <Image.Source>
                                    <OnPlatform
                                        x:TypeArguments="ImageSource"
                                        iOS            ="Icons/ArrowRightIcon.png"
                                        Android        ="ArrowRightIcon.png" />
                                </Image.Source>
                            </Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>