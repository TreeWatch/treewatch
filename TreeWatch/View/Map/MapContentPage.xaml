<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns     ="http://xamarin.com/schemas/2014/forms"
    xmlns:x    ="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class    ="TreeWatch.MapContentPage"
    xmlns:local="clr-namespace:TreeWatch;assembly=TreeWatch"
    StyleId    ="MapView">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text  ="Clear Layers"
            x:Name="clearLayers">
            <ToolbarItem.Icon>
                <OnPlatform
                    x:TypeArguments="FileImageSource"
                    Android        ="ClearLayersIcon.png"
                    iOS            ="Icons/ClearLayersIcon.png" />
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem
            Text  ="Layers"
            x:Name="layers">
            <ToolbarItem.Icon>
                <OnPlatform
                    x:TypeArguments="FileImageSource"
                    Android        ="LayersIcon.png"
                    iOS            ="Icons/LayersIcon.png" />
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Icon>
        <OnPlatform
            x:TypeArguments="FileImageSource"
            iOS            ="Icons/MapTabBarIcon.png" />
    </ContentPage.Icon>
    <ContentPage.Content>
        <local:FieldMap
            x:Name="fieldMap" />
    </ContentPage.Content>
</ContentPage>